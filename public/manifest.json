{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "LeetDaily",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "32": "icon32.png"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "permissions": ["tabs"],
  "host_permissions": ["https://*/*", "http://*/*"]
}
